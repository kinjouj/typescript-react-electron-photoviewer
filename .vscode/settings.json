{
  "files.exclude": {
    "dist": true,
    "node_modules": true,
    "release": true,
    "yarn.lock": true,
    ".npmrc": true,
    "package-lock.json": true
  },
  "[typescript]": {
    "editor.indentSize": "tabSize",
    "editor.tabSize": 2,
    "typescript.preferences.quoteStyle": "single",
  },
  "[typescriptreact]": {
    "editor.tabSize": 2,
    "typescript.preferences.quoteStyle": "single"
  },
  "[javascript]": {
    "editor.tabSize": 2
  },
  "editor.tabSize": 2,
  "typescript.format.semicolons": "insert",
  "typescript.preferences.preferTypeOnlyAutoImports": true
}
